<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="FoodOrdering.MAUI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:FoodOrdering.MAUI.Views"
       Title="Food Ordering">

    <ShellContent Title="Login"
                  Route="login"
                  ContentTemplate="{DataTemplate local:LoginPage}"
                  FlyoutItemIsVisible="False" />

    <TabBar Route="main">
        <ShellContent Title="Menu"
                      Icon="menu.png"
                      Route="menu"
                      ContentTemplate="{DataTemplate local:MenuPage}" />

        <ShellContent Title="Orders"
                      Icon="orders.png"
                      Route="orders"
                      ContentTemplate="{DataTemplate local:OrdersPage}" />

        <ShellContent Title="Profile"
                      Icon="profile.png"
                      Route="profile"
                      ContentTemplate="{DataTemplate local:ProfilePage}" />
    </TabBar>

</Shell>
