<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FoodOrderingUI.Views.CartPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FoodOrderingUI.ViewModels"
             xmlns:models="clr-namespace:FoodOrderingUI.Models"
             x:DataType="vm:CartViewModel"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cart Items -->
        <CollectionView Grid.Row="0"
                        ItemsSource="{Binding CartItems}"
                        IsVisible="{Binding HasItems}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:CartItem">
                    <Border BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Margin="0,5"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0">
                                <Label Text="{Binding MenuItem.Name}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>

                                <Label Text="{Binding MenuItem.FormattedPrice}"
                                       FontSize="14"
                                       TextColor="#666"/>

                                <Label Text="{Binding Notes}"
                                       FontSize="12"
                                       TextColor="#999"
                                       IsVisible="{Binding Notes, Converter={StaticResource StringToBoolConverter}}"/>
                            </StackLayout>

                            <!-- Quantity Controls -->
                            <StackLayout Grid.Column="1"
                                         Orientation="Horizontal"
                                         VerticalOptions="Center">
                                <Button Text="-"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        CornerRadius="20"
                                        BackgroundColor="#FF5722"
                                        TextColor="White"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CartViewModel}}, Path=UpdateQuantityCommand}"
                                        CommandParameter="{Binding .}">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding Quantity}" Value="1">
                                            <Setter Property="Command" 
                                                    Value="{Binding Source={RelativeSource AncestorType={x:Type vm:CartViewModel}}, Path=RemoveItemCommand}"/>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Label Text="{Binding Quantity}"
                                       FontSize="16"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       WidthRequest="40"/>

                                <Button Text="+"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        CornerRadius="20"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"/>
                            </StackLayout>

                            <!-- Total Price -->
                            <Label Grid.Column="2"
                                   Text="{Binding FormattedTotal}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#2196F3"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Empty Cart -->
        <StackLayout Grid.Row="0"
                     IsVisible="{Binding HasItems, Converter={StaticResource InvertedBoolConverter}}"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="Your cart is empty"
                   FontSize="18"
                   TextColor="#666"
                   HorizontalOptions="Center"/>
            <Label Text="Add some delicious items from the menu"
                   FontSize="14"
                   TextColor="#999"
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Bottom Section -->
        <StackLayout Grid.Row="1"
                     IsVisible="{Binding HasItems}"
                     BackgroundColor="#F5F5F5"
                     Padding="20">

            <!-- Special Instructions -->
            <Entry Text="{Binding SpecialInstructions}"
                   Placeholder="Special instructions (optional)"
                   Margin="0,0,0,10"/>

            <!-- Total -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="Total Amount:"
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

                <Label Grid.Column="1"
                       Text="{Binding TotalAmount, StringFormat='â‚¹{0:F2}'}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#2196F3"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Action Buttons -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="Clear Cart"
                        Command="{Binding ClearCartCommand}"
                        BackgroundColor="#FF5722"
                        TextColor="White"
                        CornerRadius="25"
                        Margin="0,0,5,0"/>

                <Button Grid.Column="1"
                        Text="Place Order"
                        Command="{Binding PlaceOrderCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="25"
                        Margin="5,0,0,0"/>
            </Grid>

            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               Color="#2196F3"
                               Margin="0,10,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>
