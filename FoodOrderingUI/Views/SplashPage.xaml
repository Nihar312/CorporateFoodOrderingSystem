<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FoodOrderingUI.Views.SplashPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#2196F3">

    <Grid>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <!-- Company Logo -->
            <Image Source="logo.png" 
                   HeightRequest="150" 
                   WidthRequest="150"
                   HorizontalOptions="Center" 
                   Margin="0,0,0,30"/>

            <!-- App Title -->
            <Label Text="Corporate Food Hub"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- Subtitle -->
            <Label Text="Delicious meals at your workplace"
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Opacity="0.8"
                   Margin="0,0,0,40"/>

            <!-- Loading Animation -->
            <ActivityIndicator IsRunning="True"
                               Color="White"
                               HeightRequest="40"
                               WidthRequest="40"/>

            <!-- Version Info -->
            <Label Text="Version 1.0.0"
                   FontSize="12"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Opacity="0.6"
                   Margin="0,40,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>